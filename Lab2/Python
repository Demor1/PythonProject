import math

def compute_radius(length):
    return length / (2 * math.pi)

def compute_area(radius):
    return math.pi * radius**2

length = float(input("Введіть довжину кола: "))
radius = compute_radius(length)
area = compute_area(radius)

print(f"Радіус кола: {radius:.3f}")
print(f"Площа круга: {area:.3f}")
